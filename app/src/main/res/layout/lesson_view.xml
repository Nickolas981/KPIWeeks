<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="#fff">

    <TextView
        android:id="@+id/number_of_day"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="4dp"
        android:text="1"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_light"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="Паралельне програмування-1.Основи "
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_light"
            android:singleLine="true"
            android:text="Долголенко Олександр Миколайович"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_light"
            android:gravity="top"
            android:singleLine="true"
            android:text="Аудиторія:"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/hz"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lesson_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_light"
            android:gravity="center"
            android:text="10:25"
            android:textColor="#eaebed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lesson_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_condensed_light"
            android:gravity="center"
            android:text="12:00"
            android:textColor="#eaebed"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>